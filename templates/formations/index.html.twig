{% extends 'base.html.twig' %}

{% block title %}Hello FormationsController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="formation">
    <h1> {{ controller_name }}! </h1>

    <div class="formationStage">
        <h1>Voici les stages disponibles</h1>
        {% for stage in listeStages %}
        <ul>
             <li>
                <div class="bouton">
                        <a href="/stages/{{stage.getId()}}"> {{stage.getTitre()}}
                        </a>
                    </div>
                    <div class="nomStage"><h2>{{stage.getTitre()}}</h2></div>
                    <div class="descriptifStage"><p>{{stage.getDescription()}}</p></div>
                
                </div>
             </li>
        </ul>
        {%endfor%}
    </div>
</div>
{% endblock %}
