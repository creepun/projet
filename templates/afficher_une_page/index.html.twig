{% extends 'base.html.twig' %}

{% block title %}Hello AfficherUnePageController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1> {{ controller_name }}! </h1>

    <div class="milieu">
        <ul>
          <li><code><a href="/entreprises">Trier par entreprise</a></code></li>
          <li><code><a href="/formations">Trier par formation</a></code></li>
        
         </ul>
    </div> 
    <div class="bas">
        <h1>Voici les stages disponibles</h1>
        {% for stage in stages %}
        <ul>
             <li>
                <div class="stage">
                <div class="nomStage"><h2>{{stage.getTitre()}}</h2></div>
                <div class="boutonTitre">
                <a href="/entreprises/{{stage.getId}}"> {{stage.getTitre()}}
                </a>
                <div class="descriptifStage"><p>{{stage.getDescription()}}</p></div>
                <div class="bouton">
                <a href="/stages_id/{{stage.getId}}"> {{stage.getTitre()}}
                </a>
                </div>

             </li>
        </ul>
        {%endfor%}
    </div>
</div>
{% endblock %}
